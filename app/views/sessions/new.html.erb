<div class="row">
  <div class="col s7">
    <div class="card yellow lighten-4">
      <div class="card-content">
        <span class="card-title">Login here</span>
          <br />
          <%= form_with url: sessions_path, local: true do |f| %>
          <div class="control-group">
            <%= f.label :username %>
            <div class="controls">
              <%= f.text_field :username %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password %>
            <div class="controls">
              <%= f.password_field :password %>
            </div>
          </div>
          
          <div class="actions"><%= f.submit "Log In" %></div>
        <% end %>
        <br />
        <p class="note">Forgot your password? <%= link_to "Click here to reset it.", new_password_reset_path %></p>
      </div>
    </div>
  </div>
</div>